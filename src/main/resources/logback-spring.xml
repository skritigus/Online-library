<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Определение формата вывода -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Вывод в консоль -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Вывод в файл с ротацией -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Ротация по дате и размеру -->
            <fileNamePattern>logs/library-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Максимальный размер файла -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Хранение логов за 30 дней -->
            <maxHistory>30</maxHistory>
            <!-- Общий максимальный размер всех файлов -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Настройка уровней логирования -->
    <logger name="library" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>